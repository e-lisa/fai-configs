#!/bin/bash
lepath=/srv/letsencrypt
apachectl stop
$lepath/./letsencrypt-auto certonly --standalone --agree-tos --email sysadmin@ftee.org -d ftee.org -d tasks.ftee.org -d staff.ftee.org -d talk.ftee.org -d ranma.ftee.org -d pad.ftee.org -d wiki.transadvice.org -d stats.ftee.org -d etherpad.transadvice.org
apachectl start
