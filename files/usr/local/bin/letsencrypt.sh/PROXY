#!/bin/bash
lepath=/srv/letsencrypt
service apache2 stop
$lepath/./letsencrypt-auto certonly --standalone --agree-tos --email sysadmin@ftee.org -d ftee.org -d tasks.ftee.org -d staff.ftee.org -d talk.ftee.org -d ranma.ftee.org -d pad.ftee.org -d wiki.transadvice.org -d stats.ftee.org -d etherpad.transadvice.org -d monitor.ftee.org -d calc.ftee.org
service apache2 start
